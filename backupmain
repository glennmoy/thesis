%CUSTOM COMMANDS
\def\bra#1{\langle#1\vert}
\def\ket#1{\vert#1\rangle}
\def\braket#1#2{\langle#1\vert#2\rangle}
\def\ketbra#1#2{\lvert#1\rangle\langle#2\rvert}
\def\ketmatbra#1#2#3{\lvert#1\rangle#2\langle#3\rvert}
\def\exv#1#2#3{\langle#1\vert#2\vert#3\rangle}
\def\rd#1{\textcolor{red}{#1}}
\def\bl#1{\textcolor{blue}{#1}}
\def\bfk{{\mathbf{k}}}
\newcommand{\onlinecite}[1]{\hspace{-1 ex} \nocite{#1}\citenum{#1}} 
\newcommand{\br}{{\bf r}}
\newcommand{\bk}{{\bf k}}


\DeclareMathOperator*{\argmin}{arg\,min}

\def\edit#1{\textcolor{red}{#1}}
\def\editt#1{\textcolor{blue}{#1}}

\def\lett#1#2{\lettrine[lines=2,
%lhang=0.25,
loversize=1,
%lraise=0.15, 
findent=0.5em,
%nindent=0em, 
slope=-0.5em
]{\textcolor{teal}{#1}}{#2}}

